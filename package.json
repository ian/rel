{
  "name": "rel-gen",
  "version": "1.0.0",
  "private": true,
  "description": "The Rel GraphQL Generator",
  "main": "index.js",
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "nyc": "15.1.0",
    "replace": "1.2.0",
    "ts-jest": "26.4.4",
    "tsup": "^5.11.9",
    "typescript": "*"
  },
  "scripts": {
    "test": "jest -w 1",
    "coverage": "jest --coverage",
    "lint": "eslint 'packages/*/src/**/*.ts'",
    "lint-fix": "eslint 'packages/*/src/**/*.ts' --fix",
    "build": "pnpm run -r build"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "changelog": {
    "labels": {
      "feature": "New Features",
      "bug": "Bug Fixes",
      "docs": "Documentation"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rel/rel-gen.git"
  },
  "bugs": {
    "url": "https://github.com/rel/rel-gen/issues"
  },
  "homepage": "https://github.com/rel/rel-gen#readme"
}
