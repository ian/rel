{
  "name": "rel-bundle",
  "version": "0.0.0",
  "description": "Visit https://rel.run/docs to view the full documentation.",
  "author": "Ian Hunter <ian@rel.run>",
  "license": "ISC",
  "main": "dist/index.mjs",
  "exports": {
    "client": "./dist/client.mjs",
    "server": "./dist/server.mjs"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsup --format esm",
    "build:watch": "tsup --watch --format esm"
  },
  "tsup": {
    "entry": [
      "src"
    ],
    "splitting": false,
    "sourcemap": true,
    "dts": true,
    "clean": true
  },
  "dependencies": {
    "@graphql-tools/merge": "^8.2.1",
    "@graphql-tools/schema": "^8.3.1",
    "@graphql-tools/utils": "^8.6.1",
    "@graphql-yoga/node": "^0.0.1-canary-ae94a57.0",
    "cyypher": "workspace:*",
    "fastify": "^3.24.0",
    "graphql": "^16.3.0",
    "graphql-compose": "^9.0.7",
    "graphql-playground-html": "^1.6.30",
    "graphql-scalars": "^1.13.5",
    "js-cookie": "^3.0.1",
    "mercurius": "^8.9.1",
    "pluralize": "^8.0.0",
    "rel-client": "workspace:^0.0.0",
    "rel-server": "workspace:^0.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "tsup": "^5.11.13",
    "typescript": "^4.5.5"
  }
